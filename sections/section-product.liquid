          },
          {
            "type": "text",
            "id": "tab_title_3",
            "label": "Tab heading"
          },
          {
            "type": "richtext",
            "id": "tab_content_3",
            "label": "Tab text"
          },
          {
            "type": "text",
            "id": "tab_title_4",
            "label": "Tab heading"
          },
          {
            "type": "richtext",
            "id": "tab_content_4",
            "label": "Tab text"
          },
          {
            "type": "text",
            "id": "tab_title_5",
            "label": "Tab heading"
          },
          {
            "type": "richtext",
            "id": "tab_content_5",
            "label": "Tab text"
          }
