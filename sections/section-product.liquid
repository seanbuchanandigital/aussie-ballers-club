        "type": "description",
        "settings": [
          {
            "type": "header",
            "content": "Tabs"
          },
          {
            "type": "paragraph",
            "content": "You have the option to enable three extra tabs for more information on your product."
          },
          {
            "type": "select",
            "id": "tabs_style",
            "label": "Tabs style",
            "default": "accordions",
            "options": [
              { "label": "Accordions", "value": "accordions" },
              { "label": "Disable tabs", "value": "tabs_disabled" }
            ]
          },
          {
            "type": "text",
