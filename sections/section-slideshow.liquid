{%- comment -%} /sections/slideshow.liquid {%- endcomment -%}

{%- liquid
	assign slides_count = section.blocks.size
-%}

<section class="abc-slideshow">
	{%- if section.blocks.size > 1 -%}
		<div class="slick-slider">
			{%- for block in section.blocks -%}
				{%- liquid
					assign image = block.settings.image
					assign btn_link =  block.settings.slide_btn_link | default: '#'
				-%}

				<div class="slick-item">
					{%- if image -%}
						<span class="background-image" style="background-image: url({{ image | image_url: width: 1920 }});"></span>
					{%- else -%}
						<span class="background-image" style="background-image: url({{ '1920x500.png' | asset_url }});"></span>
					{%- endif -%}

					<div class="wrapper">
						<div class="row">
							<div class="col">
								<div class="card">
									{%- if block.settings.slide_subheading != blank -%}
										<span class="tag-line">{{ block.settings.slide_subheading | escape | newline_to_br }}</span>
									{%- endif -%}

									{%- if block.settings.title != blank -%}
										<h2 role="heading" aria-level="2">{{ block.settings.title | escape }}</h2>
									{%- endif -%}

									{%- if block.settings.slide_btn_text != blank -%}
										<a role="link" class="btn-default inverse" href="{{ btn_link }}">{{ block.settings.slide_btn_text | escape }}</a>
									{%- endif -%}
								</div>
							</div>
						</div>
					</div>
				</div>
			{%- endfor -%}
		</div>
	{%- else -%}
		<div class="slick-banner">
			{%- for block in section.blocks -%}
				{%- liquid
					assign image = block.settings.image
					assign btn_link =  block.settings.slide_btn_link | default: '#'
				-%}

				<div class="slick-item">
					{%- if image -%}
						<span class="background-image" style="background-image: url({{ image | image_url: width: 1920 }});"></span>
					{%- else -%}
						<span class="background-image" style="background-image: url({{ '1920x500.png' | asset_url }});"></span>
					{%- endif -%}

					<div class="wrapper">
						<div class="row">
							<div class="col">
								<div class="card">
									{%- if block.settings.slide_subheading != blank -%}
										<span class="tag-line">{{ block.settings.slide_subheading | escape | newline_to_br }}</span>
									{%- endif -%}

									{%- if block.settings.title != blank -%}
										<h2 role="heading" aria-level="2">{{ block.settings.title | escape }}</h2>
									{%- endif -%}

									{%- if block.settings.slide_btn_text != blank -%}
										<a role="link" class="btn-default inverse" href="{{ btn_link }}">{{ block.settings.slide_btn_text | escape }}</a>
									{%- endif -%}
								</div>
							</div>
						</div>
					</div>
				</div>
			{%- endfor -%}
		</div>
	{%- endif -%}

	{%- if section.blocks.size > 1 -%}
		<div class="slick-slider-controls">
			<div class="wrapper">
				<div class="slider-controls">
					<button type="button" data-control="slickPrev">
